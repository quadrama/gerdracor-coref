    <front>
      <div type="front">
        <head>Friedrich Maximilian Klinger</head>
        <head>Sturm und Drang</head>
        <head>Ein Schauspiel</head>
        <pb n="1144"/>
      </div>
    </front>
    <body>
      <div>
        <div>
          <desc>
            <title>Personen</title>
          </desc>
        </div>
        <div type="text">
          <div type="Dramatis_Personae">
            <castList>
              <head>Personen.</head>
              <castGroup>
                <castItem>Wild.</castItem>
                <castItem>La Feu.</castItem>
                <castItem>Blasius.</castItem>
                <castItem>Lord Berkley.</castItem>
                <castItem>Jenny Caroline, seine Tochter.</castItem>
                <castItem>Lady Katharine, die Tante.</castItem>
                <castItem>Louise, Nichte.</castItem>
                <castItem>Schiffskapitän Boyet.</castItem>
                <castItem>Lord Bushy.</castItem>
                <castItem>Ein junger Mohr.</castItem>
