        <head>Ludwig Anzengruber</head>
        <head>Der Meineidbauer</head>
        <pb n="9"/>
      </div>
    </front>
    <body>
      <div>
        <div>
          <desc>
            <title>Personen</title>
          </desc>
        </div>
        <div type="text">
          <div type="Dramatis_Personae">
            <castList>
              <head>Personen.</head>
              <castGroup>
                <castItem>Matthias Ferner, der Kreuzweghofbauer</castItem>
                <castItem>Crescenz,</castItem>
                <castItem>Franz, , seine Kinder</castItem>
                <castItem>Andreas Höllerer, der Adamshofbauer</castItem>
                <castItem>Toni, sein Sohn</castItem>
                <castItem>Der Großknecht</castItem>
                <castItem>Burgei,</castItem>
                <castItem>Mirzl,</castItem>
                <castItem>Waberl,</castItem>
                <castItem>Annerl,</castItem>
                <castItem>Gretl, , Mägde am Adamshofe</castItem>
                <castItem>Muckerl, Kühjunge</castItem>
                <castItem>Die alte Burgerliese</castItem>
                <castItem>Jakob,</castItem>
