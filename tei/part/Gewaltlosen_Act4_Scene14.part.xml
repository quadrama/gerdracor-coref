                <castItem>Nauke.</castItem>
                <castItem>Der erste Gefängniswächter.</castItem>
                <castItem>Der zweite Gefängniswächter.</castItem>
                <castItem>Der Offizier.</castItem>
                <castItem>Der erste Gefangene.</castItem>
                <castItem>Der zweite Gefangene.</castItem>
                <castItem>Der Kranke auf dem Schiff.</castItem>
                <castItem>Der Kapitän.</castItem>
                <castItem>Der Führer der Bürger.</castItem>
                <castItem>Drei Bürger.</castItem>
                <castItem>Der Bucklige.</castItem>
                <castItem>Der Krüppel.</castItem>
                <castItem>Der junge Mensch.</castItem>
                <castItem>Drei Revolutionärinnen der Stadt.</castItem>
                <castItem>Der Junge von der Straße.</castItem>
                <castItem>Der Herr im Zylinder.</castItem>
                <castItem>Die Frau aus dem Volk.</castItem>
                <castItem>Ein Soldat.</castItem>
                <castItem>Volk. Soldaten. Matrosen.</castItem>
