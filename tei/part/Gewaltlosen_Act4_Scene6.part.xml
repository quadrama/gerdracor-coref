      <div type="front">
        <head>Ludwig Rubiner</head>
        <head>Die Gewaltlosen</head>
        <head>Drama in vier Akten</head>
      </div>
    </front>
    <body>
      <div>
        <div>
          <desc>
            <title>[Widmung]</title>
          </desc>
        </div>
        <div type="text">
          <div>
            <p>
              <seg>
                <hi>Dem Kameraden,</hi>
              </seg>
            </p>
            <p>
              <seg>
                <hi>meiner Frau Frida</hi>
              </seg>
            </p>
            <pb n="50"/>
          </div>
        </div>
      </div>
      <div>
        <div>
          <desc>
            <title>Personen</title>
          </desc>
        </div>
        <div type="text">
          <div type="Dramatis_Personae">
            <castList>
              <head>Personen.</head>
              <castGroup>
                <castItem>Der Mann.</castItem>
