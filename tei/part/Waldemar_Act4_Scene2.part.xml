      <div>
        <div>
          <desc>
            <title>Personen</title>
          </desc>
        </div>
        <div type="text">
          <div type="Dramatis_Personae">
            <castList>
              <head><pb n="509"/> Personen.</head>
              <castGroup>
                <castItem>Waldemar Graf Schenk.</castItem>
                <castItem>Hugo Graf Schenk, sein Vetter.</castItem>
                <castItem>Rittmeister von Randor.</castItem>
                <castItem>Heinrich von Sorben.</castItem>
                <castItem>Fedor Iwanowitsch Fürst Udaschkin.</castItem>
                <castItem>Georgine Fürstin Udaschkin.</castItem>
                <castItem>Hiller, Gärtner.</castItem>
                <castItem>Gertrud, seine Tochter.</castItem>
                <castItem>Hans, sein Pflegesohn.</castItem>
                <castItem>Gordon, Stallmeister,</castItem>
                <castItem>Box, Kammerdiener, des Grafen Waldemar.</castItem>
                <castItem>Frau Box, seine Mutter.</castItem>
                <castItem>Rosa, ein Bürgermädchen.</castItem>
                <castItem>Bose, Arbeiter.</castItem>
                <castItem>Der Bezirksvorsteher.</castItem>
                <castItem>Ein Nachtwächter.</castItem>
                <castItem>Kammerfrau,</castItem>
                <castItem>Gregor, Diener, der Fürstin Udaschkin.</castItem>
                <castItem>Gäste. Volk. Bediente.</castItem>
                <pb n="509"/>
