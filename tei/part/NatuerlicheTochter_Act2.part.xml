    <front>
      <div type="front">
        <head>Johann Wolfgang Goethe</head>
        <head>Die natürliche Tochter</head>
        <head>Trauerspiel</head>
      </div>
      <div type="Dramatis_Personae">
        <castList>
          <head><pb n="215"/> Personen.</head>
          <rs ref="#koenig"><castItem>König</castItem></rs>
          <rs ref="#herzog"><castItem>Herzog</castItem></rs>
          <rs ref="#graf"><castItem>Graf</castItem></rs>
          <rs ref="#eugenie"><castItem>Eugenie</castItem></rs>
          <rs ref="#hofmeisterin"><castItem>Hofmeisterin</castItem></rs>
          <rs ref="#sekretaer"><castItem>Sekretär</castItem></rs>
          <rs ref="#weltgeistlicher"><castItem>Weltgeistlicher</castItem></rs>
          <rs ref="#gerichtsrat"><castItem>Gerichtsrat</castItem></rs>
          <rs ref="#gouverneur"><castItem>Gouverneur</castItem></rs>
