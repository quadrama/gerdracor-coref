            <title>[Widmung]</title>
          </desc>
        </div>
        <div type="text">
          <div>
            <p>
              <seg>
                <hi>Dem Kameraden,</hi>
              </seg>
            </p>
            <p>
              <seg>
                <hi>meiner Frau Frida</hi>
              </seg>
            </p>
            <pb n="50"/>
          </div>
        </div>
      </div>
      <div>
        <div>
          <desc>
