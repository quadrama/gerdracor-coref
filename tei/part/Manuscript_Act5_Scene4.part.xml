    <front>
      <div type="front">
        <head>Johanna von Weißenthurn</head>
        <head>Das Manuscript</head>
        <head>Lustspiel in fünf Aufzügen</head>
        <pb n="2"/>
      </div>
    </front>
    <body>
      <div>
        <div>
          <desc>
            <title>Personen</title>
          </desc>
        </div>
        <div type="text">
          <div type="Dramatis_Personae">
            <castList>
              <head>Personen.</head>
              <castGroup>
                <castItem>Gehrmann, Buchhändler.</castItem>
                <castItem>August, sein Neffe.</castItem>
                <castItem>Flint, erster Commis.</castItem>
                <castItem>Walter, Commis.</castItem>
                <castItem>Emerike Würzig, Herrn Gehrmann's Mündel.</castItem>
