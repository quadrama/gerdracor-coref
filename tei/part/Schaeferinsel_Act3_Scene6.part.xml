    <front>
      <div type="front">
        <head><pb n="472"/> Christlob Mylius</head>
        <head>Die Schäferinsel</head>
        <head>Ein Lustspiel in drey Aufzügen</head>
      </div>
    </front>
    <body>
      <div>
        <div>
          <desc>
            <title>Personen</title>
          </desc>
        </div>
        <div type="text">
          <div type="Dramatis_Personae">
            <castList>
              <head>Personen.</head>
              <castGroup>
                <castItem>Montan.</castItem>
                <castItem>Damöt.</castItem>
                <castItem>Doris.</castItem>
                <castItem>Sylvia.</castItem>
                <castItem>Chloe.</castItem>
                <castItem>Silvander.</castItem>
                <castItem>Mops.</castItem>
