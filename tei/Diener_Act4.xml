    <front>
      <div type="front">
        <head>Franz Grillparzer</head>
        <head>Ein treuer Diener seines Herrn</head>
        <head>Trauerspiel in fünf Aufzügen</head>
      </div>
    </front>
    <body>
      <div>
        <div>
          <desc>
            <title>Personen</title>
          </desc>
        </div>
        <div type="text">
          <div type="Dramatis_Personae">
            <castList>
              <head><pb n="1086"/> Personen.</head>
              <castGroup>
                <castItem>König Andreas von Ungarn</castItem>
                <castItem>Gertrude, seine Gemahlin</castItem>
                <castItem>Bela, beider Kind</castItem>
                <castItem>Herzog Otto von Meran, der Königin Bruder</castItem>
                <castItem>Bancbanus</castItem>
                <castItem>Erny, seine Frau</castItem>
                <castItem>Graf Simon, Bruder des Bancbanus</castItem>
                <castItem>Graf Peter, Ernys Bruder</castItem>
                <castItem>Der Hauptmann des königlichen Schlosses</castItem>
                <castItem>Zwei Edelleute von Herzog Ottos Gefolge</castItem>
                <castItem>Mehrere Hauptleute</castItem>
                <castItem>Ein königlicher Kämmerer</castItem>
